#!/bin/sh
#/ Move the last commit to a new branch.
#/
#/ Usage: git-move-last-commit-to-branch <NEW_BRANCH_NAME>

usage() {
  status=${1:-0}
  grep '^#/' < "$0" | cut -c4-
  exit $status
}

[ $# -eq 0 ] || [ "$1" = "--help" ] && usage 1

new_branch_name=$1
git branch $new_branch_name
# remove the commit from the master branch
git reset HEAD~ --hard
git checkout $new_branch_name
