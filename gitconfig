[include]
    path = ~/.gitconfig.local
[apply]
    whitespace = nowarn
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true
[merge]
    summary = true
    ff = false
    tool = kdiff3
[mergetool "kdiff3"]
    path = /Applications/kdiff3.app/Contents/MacOS/kdiff3
[diff]
    ignoresubmodules = untracked
[core]
	excludesfile = /Users/nficano/.gitignore
[push]
	default = simple
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
