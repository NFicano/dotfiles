layout_poetry() {
  if [[ ! -f pyproject.toml ]]; then
    log_error "No pyproject.toml found.  Use poetry init to create one first."
    exit 2
  fi

  local VENV
  VENV=$(dirname "$(poetry run which python)")

  VIRTUAL_ENV=$(echo "$VENV" | rev | cut -d'/' -f2- | rev)
  export VIRTUAL_ENV
  export POETRY_ACTIVE=1
  PATH_add "$VENV"
}
